---
import BlogCard from '../components/BlogCard.astro'
import Section from '../components/Section.astro'
import type { MemberType } from '../utils/types'
import BaseLayout from './BaseLayout.astro'

const {
  frontmatter: {
    name,
    nameReading,
    nameRomaji,
    hobby,
    skill,
    height,
    role,
    imgUrl,
    bloodType,
    birthplace,
    twitter,
    instagram,
    otherSns
  }
} = Astro.props as MemberType

const members = (await Astro.glob('../pages/members/*.{md,mdx}')).sort(
  (a, b) => a.frontmatter.order.valueOf() - b.frontmatter.order.valueOf()
) as MemberType[]
---

<BaseLayout title={name}>
  <Section index={1}>
    <BlogCard>
      <div class="flex flex-wrap justify-between gap-4 px-4 text-sm">
        {members.map((mem) => <a href={mem.url}>{mem.frontmatter.name}</a>)}
      </div>
    </BlogCard>
    <div class="flex flex-col gap-6 md:flex-row">
      <img
        src={imgUrl}
        alt={nameRomaji}
        class="h-auto w-full border-4 border-white object-cover shadow md:w-2/5 md:border-8 lg:w-1/2"
      />
      <div>
        <div class="mb-6 flex items-end gap-3">
          <h1 class="text-4xl font-bold md:text-6xl">{name}</h1><span>{nameReading}</span>
        </div>
        <div class="flex h-3/4 flex-col justify-between gap-6">
          <div class="flex flex-col gap-2">
            <p><span class="font-bold">役職：</span> {role}</p>
            <p><span class="font-bold">身長：</span> {height}cm</p>
            <p><span class="font-bold">出身地：</span> {birthplace}</p>
            <p><span class="font-bold">血液：</span> {bloodType}型</p>
            <p><span class="font-bold">特技：</span> {skill}</p>
            <p><span class="font-bold">趣味：</span> {hobby}</p>
          </div>
          <div class="flex w-full flex-wrap justify-around gap-4 md:justify-between">
            <a href={`https://twitter.com/${twitter}`} target="_blank" class="flex items-center gap-1"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                style="transform: ;msFilter:;"
                class="fill-main-dark dark:fill-main-light"
                ><path
                  d="M19.633 7.997c.013.175.013.349.013.523 0 5.325-4.053 11.461-11.46 11.461-2.282 0-4.402-.661-6.186-1.809.324.037.636.05.973.05a8.07 8.07 0 0 0 5.001-1.721 4.036 4.036 0 0 1-3.767-2.793c.249.037.499.062.761.062.361 0 .724-.05 1.061-.137a4.027 4.027 0 0 1-3.23-3.953v-.05c.537.299 1.16.486 1.82.511a4.022 4.022 0 0 1-1.796-3.354c0-.748.199-1.434.548-2.032a11.457 11.457 0 0 0 8.306 4.215c-.062-.3-.1-.611-.1-.923a4.026 4.026 0 0 1 4.028-4.028c1.16 0 2.207.486 2.943 1.272a7.957 7.957 0 0 0 2.556-.973 4.02 4.02 0 0 1-1.771 2.22 8.073 8.073 0 0 0 2.319-.624 8.645 8.645 0 0 1-2.019 2.083z"
                ></path></svg
              >@{twitter}</a
            >
            <a href={`https://instagram.com/${instagram}`} target="_blank" class="flex items-center gap-1"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                style="transform: ;msFilter:;"
                class="fill-main-dark dark:fill-main-light"
                ><path
                  d="M20.947 8.305a6.53 6.53 0 0 0-.419-2.216 4.61 4.61 0 0 0-2.633-2.633 6.606 6.606 0 0 0-2.186-.42c-.962-.043-1.267-.055-3.709-.055s-2.755 0-3.71.055a6.606 6.606 0 0 0-2.185.42 4.607 4.607 0 0 0-2.633 2.633 6.554 6.554 0 0 0-.419 2.185c-.043.963-.056 1.268-.056 3.71s0 2.754.056 3.71c.015.748.156 1.486.419 2.187a4.61 4.61 0 0 0 2.634 2.632 6.584 6.584 0 0 0 2.185.45c.963.043 1.268.056 3.71.056s2.755 0 3.71-.056a6.59 6.59 0 0 0 2.186-.419 4.615 4.615 0 0 0 2.633-2.633c.263-.7.404-1.438.419-2.187.043-.962.056-1.267.056-3.71-.002-2.442-.002-2.752-.058-3.709zm-8.953 8.297c-2.554 0-4.623-2.069-4.623-4.623s2.069-4.623 4.623-4.623a4.623 4.623 0 0 1 0 9.246zm4.807-8.339a1.077 1.077 0 0 1-1.078-1.078 1.077 1.077 0 1 1 2.155 0c0 .596-.482 1.078-1.077 1.078z"
                ></path><circle cx="11.994" cy="11.979" r="3.003"></circle></svg
              >@{instagram}</a
            >
            <a href={`https://facebook.com/${otherSns}`} target="_blank" class="flex items-center gap-1"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                style="transform: ;msFilter:;"
                class="fill-main-dark dark:fill-main-light"
                ><path
                  d="M20 3H4a1 1 0 0 0-1 1v16a1 1 0 0 0 1 1h8.615v-6.96h-2.338v-2.725h2.338v-2c0-2.325 1.42-3.592 3.5-3.592.699-.002 1.399.034 2.095.107v2.42h-1.435c-1.128 0-1.348.538-1.348 1.325v1.735h2.697l-.35 2.725h-2.348V21H20a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1z"
                ></path></svg
              >@{otherSns}</a
            >
          </div>
        </div>
      </div>
    </div>
  </Section>
  <Section index={2}>
    <slot />
  </Section>
</BaseLayout>
