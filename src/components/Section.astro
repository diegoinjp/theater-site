---
import { maxSize } from '../config'

export interface ISection {
  index?: number
}
const { index = 1 } = Astro.props as ISection
const indexColor = index % 2 === 0 ? 'bg-white dark:bg-zinc-900' : 'bg-violet-300 dark:bg-violet-700'
---

<div class={`w-full ${indexColor}`}>
  <div class={`${maxSize} m-auto p-5 pt-10 pb-14`}>
    <slot />
  </div>
</div>
