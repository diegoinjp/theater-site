---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, class: className, ...props } = Astro.props

const { pathname } = Astro.url
const isActive = href === pathname || href === pathname.replace(/\/$/, '')
---

<a
  href={href}
  class={`${
    isActive && 'text-red-600 dark:text-red-300'
  } relative transition-all group hover:text-red-600 dark:hover:text-red-300`}
  {...props}
>
  <slot />
  <span
    class="absolute -bottom-2 left-0 hidden h-1 w-0 bg-black transition-all group-hover:w-full group-hover:bg-red-600 md:block"
  ></span>
</a>
